<br>
<div class="sign-in-form container">
    <div class="sign-in-brand">
        <a href="<%= root_path %>" class="logo">Idea Factory</a>
    </div><br>
    <%= form_with model: @user, local: true do |f|%>
    <div class="sign-in-content">
        <h3><strong>Create Account</strong></h3>
        <% if @user.errors.any? %>
        <ul style="color:red;">
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        <% end %>

        <strong><%= f.label :first_name, "First name"%></strong>
        <%= f.text_field :first_name, style:"width:100%;"%>
        <strong><%= f.label :last_name, "Last name"%></strong>
        <%= f.text_field :last_name, style:"width:100%;"%>
        <strong><%= f.label :email, "Email"%></strong>
        <%= f.email_field :email, style:"width:100%;"%>
        <strong><%= f.label :password, "Password"%></strong>
        <%= f.password_field :password, style:"width:100%;"%>
        <strong><%= f.label :password_confirmation, "Password again" %></strong><br>
        <%= f.password_field :password_confirmation, style:"width:100%;"%>
        <div><br>
            <%= f.submit "Create Your Account", style:"width:100%;", class:"sign-in-button"%><br>
            <p class="terms-of-use"><br>
                By creating an account, you agree to Idea Factory's<br>
                <strong style="color:#0000EE;">Conditions of Use</strong> and <strong style="color:#0000EE;">Privacy
                    Notice</strong>.
                <hr>
                <p><strong>Already have account? <a href="<%= new_session_path %>">Sign In</a></strong></p>
                <% end %>
        </div>
    </div>